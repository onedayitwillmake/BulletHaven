<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="horizontal"
    xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
    
    

    <action label="top">
        <repeat><times>50</times>
            <action>
                <fire>
                    <direction type="absolute">190</direction>
                    <bulletRef label="roll"/>
                </fire>
                <wait>10+$rand*1</wait>
            </action>
        </repeat>
    </action>
            
    
    <bullet label="roll">
        <action>
            <wait>40+$rand*10</wait>
            <changeDirection>
                <direction type="relative">-90</direction>
                <term>4</term>
            </changeDirection>
            <changeSpeed>
                <speed>6</speed>
                <term>15</term>
            </changeSpeed>

            <changeDirection>
                <direction type="sequence">5</direction>
                <term>9999</term>
            </changeDirection>
            <wait>250</wait>
            
            
            <changeDirection>
                <direction type="relative">-180</direction>
                <term>0</term>
            </changeDirection>
            <wait>40</wait>
            
            <changeDirection>
                <direction type="sequence">-12-$rand*1</direction>
                <term>99+$rand*0.5</term>
            </changeDirection>
            
            <wait>60</wait>
            
            <changeSpeed>
                <speed>6</speed>
                <term>15</term>
            </changeSpeed>
            <changeDirection>
                <direction type="sequence">12+$rand*1</direction>
                <term>99</term>
            </changeDirection>
            <wait>60</wait>
            <changeDirection>
                <direction type="absolute">-180</direction>
                <term>0</term>
            </changeDirection>

                      

                        
            
                  

           </action>
    </bullet>
    
</bulletml>
