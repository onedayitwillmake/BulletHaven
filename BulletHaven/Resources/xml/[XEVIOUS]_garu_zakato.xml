<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<fire>
 <direction type="absolute">180</direction>
 <speed>3</speed>
 <bulletRef label="gzc"/>
</fire>
</action>

<bullet label="gzc">
<action>
<wait>10+$rand*10</wait>
<repeat><times>16</times>
<action>
 <fire>
  <direction type="sequence">360/16</direction>
  <bulletRef label="spr"/>
 </fire>
</action>
</repeat>
<repeat><times>4</times>
<action>
 <fire>
  <direction type="sequence">90</direction>
  <bulletRef label="hrmSpr"/>
 </fire>
</action>
</repeat>
<vanish/>
</action>
</bullet>

<bullet label="spr">
<speed>2</speed>
</bullet>

<bullet label="hrmSpr">
<speed>0</speed>
<action>
<changeSpeed>
 <speed>2</speed>
 <term>60</term>
</changeSpeed>
</action>
<action>
<repeat><times>9999</times>
<action>
 <changeDirection>
  <direction type="aim">0</direction>
  <term>40</term>
 </changeDirection>
 <wait>1</wait>
</action>
</repeat>
</action>
</bullet>

</bulletml>
