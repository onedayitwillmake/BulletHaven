<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="horizontal"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<repeat><times>32</times>
<action>
 <fire>
  <direction type="absolute">320</direction>
  <bulletRef label="wave">
   <param>-3</param>
  </bulletRef>
 </fire>
 <wait>30</wait>
 <fire>
  <direction type="absolute">220</direction>
  <bulletRef label="wave">
   <param>3</param>
  </bulletRef>
 </fire>
 <wait>30</wait>
</action>
</repeat>
</action>

<bullet label="wave">
<speed>1</speed>
<action>
<fire>
 <direction>0</direction>
 <bulletRef label="nrm"/>
</fire>
<repeat><times>8+$rank*10</times>
<action>
 <fire>
  <direction type="sequence">$1</direction>
  <bulletRef label="nrm"/>
 </fire>
 <wait>3</wait>
</action>
</repeat>
<vanish/>
</action>
</bullet>

<bullet label="nrm">
<speed>1</speed>
</bullet>

</bulletml>
